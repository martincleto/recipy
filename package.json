{
  "name": "recipy",
  "version": "1.0.0",
  "description": "App for creating, bookmarking and sharing recipes",
  "main": "index.html",
  "author": "Santiago Mart√≠n-Cleto Paniagua",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martincleto/recipy.git"
  },
  "keywords": [
    "angular",
    "webpack"
  ],
  "bugs": {
    "url": "https://github.com/martincleto/recipy/issues"
  },
  "homepage": "https://github.com/martincleto/recipy#readme",
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack --progress --profile --bail",
    "clean": "rimraf dist",
    "lint:js": "eslint --cache -c config/.eslintrc.json --cache-location cache/.eslintcache src/server/**/*.js; exit 0",
    "lint:sass": "sass-lint -c config/.sass-lint.yml -v -q",
    "lint:ts": "tslint -c config/tslint.json -p config/tsconfig.json -e src/client/**/*.spec.ts -e src/client/polyfills.ts -e src/client/vendor.ts src/client/**/*.ts",
    "lint": "npm run lint:sass && npm run lint:js && npm run lint:ts",
    "prebuild": "npm run clean",
    "pretest": "npm run lint",
    "serve:dev": "nodemon --debug src/server/server.js",
    "serve:dist": "node src/server/server.js",
    "start": "webpack-dev-server --inline --progress --port 8080",
    "test:client": "karma start config/karma.conf.js",
    "test:server": "jasmine JASMINE_CONFIG_PATH=config/jasmine.json",
    "test": "npm run test:server && npm run test:client"
  },
  "dependencies": {
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/material": "^2.0.0-beta.2",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/router": "^4.0.0",
    "concurrently": "^3.4.0",
    "core-js": "^2.4.1",
    "cross-env": "^3.2.4",
    "express": "^4.15.2",
    "express-graphql": "^0.6.4",
    "graphql": "^0.9.2",
    "hammerjs": "^2.0.8",
    "material": "^0.1.1",
    "mongoose": "^4.9.2",
    "rxjs": "^5.2.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.46",
    "@types/node": "^7.0.12",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "css-loader": "^0.27.3",
    "eslint": "^3.19.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "jasmine": "^2.5.3",
    "jasmine-core": "^2.5.2",
    "karma": "^1.5.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "node-sass": "^4.5.2",
    "nodemon": "^1.11.0",
    "null-loader": "^0.1.1",
    "postcss-loader": "^1.3.3",
    "raw-loader": "^0.5.1",
    "request": "^2.81.0",
    "rimraf": "^2.6.1",
    "sass-lint": "^1.10.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.0",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.5.1",
    "typescript": "^2.2.2",
    "webpack": "^2.3.2",
    "webpack-dev-server": "^2.4.2",
    "webpack-merge": "^4.1.0"
  }
}
